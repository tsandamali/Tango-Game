    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/tangoGame.js"></script>
    <script>
        const socket = io();
        const gameId = window.location.pathname.split('/').pop();
        let playerId = null;
        let playerName = '';
        let startTime = null;
        let timerInterval = null;
        let currentRound = 1;
        let totalRounds = 3;
        let tangoGameInstance = null;

        function showScreen(screenName) {
            document.querySelectorAll('.join-screen, .waiting-screen, .countdown-screen, .game-screen, .result-screen, .waiting-round2-screen')
                .forEach(s => s.classList.remove('active'));
            document.querySelector(`.${screenName}`).classList.add('active');
        }

        function updateRoundIndicator(round, total) {
            currentRound = round;
            totalRounds = total;
            document.getElementById('current-round').textContent = round;
            document.getElementById('total-rounds').textContent = total;
            document.getElementById('round-indicator').style.display = 'block';
        }

        function joinGame() {
            const nameInput = document.getElementById('player-name');
            playerName = nameInput.value.trim();

            if (!playerName) {
                alert('Please enter your name');
                return;
            }

            // Store in sessionStorage to prevent refresh reset
            sessionStorage.setItem('playerId', playerId || '');
            sessionStorage.setItem('playerName', playerName);

            socket.emit('join-game', { gameId, playerName, isAdmin: false });
        }

        function startTimer() {
            startTime = Date.now();
            timerInterval = setInterval(() => {
                const elapsed = Date.now() - startTime;
                document.getElementById('timer').textContent = formatTime(elapsed);
            }, 10);
        }

        function stopTimer() {
            if (timerInterval) {
                clearInterval(timerInterval);
                timerInterval = null;
            }
        }

        function formatTime(ms) {
            const totalSeconds = ms / 1000;
            const minutes = Math.floor(totalSeconds / 60);
            const seconds = (totalSeconds % 60).toFixed(2);
            return `${minutes.toString().padStart(2, '0')}:${seconds.padStart(5, '0')}`;
        }

        function showError(message) {
            const container = document.getElementById('error-container');
            container.innerHTML = `<div class="error-message">${message}</div>`;
            setTimeout(() => {
                container.innerHTML = '';
            }, 3000);
        }

        // Socket event listeners
        socket.on('game-joined', (data) => {
            playerId = data.playerId;
            sessionStorage.setItem('playerId', playerId);
            document.getElementById('player-name-display').textContent = playerName;
            updateRoundIndicator(data.currentRound || 1, data.totalRounds || 2);
            showScreen('waiting-screen');
            document.getElementById('waiting-player-count').textContent = data.playerCount;

            if (data.gameStatus && data.gameStatus.includes('active')) {
                socket.emit('get-current-puzzle', { gameId });
            }
        });

        socket.on('player-joined', (data) => {
            document.getElementById('waiting-player-count').textContent = data.playerCount;
        });

        socket.on('countdown-start', (data) => {
            showScreen('countdown-screen');
            if (data.round) {
                updateRoundIndicator(data.round, totalRounds);
            }
            let seconds = data.seconds;
            document.getElementById('countdown-display').textContent = seconds;

            const countdownInterval = setInterval(() => {
                seconds--;
                document.getElementById('countdown-display').textContent = seconds;
                if (seconds <= 0) {
                    clearInterval(countdownInterval);
                }
            }, 1000);
        });

        socket.on('game-start', (data) => {
            showScreen('game-screen');

            if (data.round) {
                updateRoundIndicator(data.round, totalRounds);
            }

            const puzzle = data.puzzle;

            // All rounds use Tango puzzle
            // Round 1: 4x4 grid
            // Round 2: 6x6 grid
            // Round 3: 8x8 grid
            const gameContainer = document.getElementById('puzzle-container');
            gameContainer.innerHTML = '<div id="tango-game-container"></div>';

            tangoGameInstance = new TangoGame('tango-game-container', puzzle, (solution) => {
                socket.emit('submit-solution', {
                    playerId,
                    gameId,
                    solution,
                    round: currentRound
                });
            });

            startTimer();
        });

        socket.on('solution-incorrect', (data) => {
            showError('❌ Incorrect solution! Try again.');
            // Timer keeps running - don't stop it
        });

        socket.on('solution-correct', (data) => {
            stopTimer(); // Only stop timer when solution is correct

            if (data.round === 1 && data.moveToRound2) {
                // Round 1 completed - automatically move to Round 2
                console.log('Round 1 complete, waiting for Round 2 puzzle...');
            } else if (data.round === 2 && data.moveToRound3) {
                // Round 2 completed - automatically move to Round 3
                console.log('Round 2 complete, waiting for Round 3 puzzle...');
            } else if (data.round === 3) {
                // Round 3 completed - show final results with TOTAL time
                showScreen('result-screen');

                // Update UI to show total time and rank
                document.getElementById('final-results-container').innerHTML = `
                    <div class="result-stats">
                        <div class="stat">
                            <h3>${formatTime(data.totalTime)}</h3>
                            <p>Total Time (All Rounds)</p>
                        </div>
                        <div class="stat">
                            <h3>#${data.totalRank || data.rank}</h3>
                            <p>Final Rank</p>
                        </div>
                    </div>
                `;
            }
        });

        socket.on('start-round2-individual', (data) => {
            // Immediately start Round 2 for this player (no countdown, no waiting)
            console.log('Starting Round 2 immediately...');

            updateRoundIndicator(2, totalRounds);
            showScreen('game-screen');

            const puzzle = data.puzzle;

            // Render Round 2 Tango puzzle (6x6 grid)
            const gameContainer = document.getElementById('puzzle-container');
            gameContainer.innerHTML = '<div id="tango-game-container"></div>';

            tangoGameInstance = new TangoGame('tango-game-container', puzzle, (solution) => {
                socket.emit('submit-solution', {
                    playerId,
                    gameId,
                    solution,
                    round: 2
                });
            });

            // Start timer for Round 2
            startTimer();
        });

        socket.on('start-round3-individual', (data) => {
            // Immediately start Round 3 for this player (no countdown, no waiting)
            console.log('Starting Round 3 immediately...');

            updateRoundIndicator(3, totalRounds);
            showScreen('game-screen');

            const puzzle = data.puzzle;

            // Render Round 3 Tango puzzle (8x8 grid)
            const gameContainer = document.getElementById('puzzle-container');
            gameContainer.innerHTML = '<div id="tango-game-container"></div>';

            tangoGameInstance = new TangoGame('tango-game-container', puzzle, (solution) => {
                socket.emit('submit-solution', {
                    playerId,
                    gameId,
                    solution,
                    round: 3
                });
            });

            // Start timer for Round 3
            startTimer();
        });

        socket.on('error', (data) => {
            alert('Error: ' + data.message);
        });

        // Prevent refresh reset
        window.addEventListener('beforeunload', (e) => {
            if (startTime && !timerInterval) {
                // Game is active
                e.preventDefault();
                e.returnValue = '';
            }
        });

        // Check if returning player
        const storedPlayerId = sessionStorage.getItem('playerId');
        const storedPlayerName = sessionStorage.getItem('playerName');
        if (storedPlayerId && storedPlayerName) {
            playerId = storedPlayerId;
            playerName = storedPlayerName;
            document.getElementById('player-name-display').textContent = playerName;
            socket.emit('join-game', { gameId, playerName, isAdmin: false });
        }
    </script>
</body>
</html>
