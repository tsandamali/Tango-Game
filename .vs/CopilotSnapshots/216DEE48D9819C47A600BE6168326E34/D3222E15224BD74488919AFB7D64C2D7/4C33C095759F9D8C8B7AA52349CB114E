<body>
    <div class="container">
        <h1>🎯 Tango Puzzle Game</h1>
        <div class="round-indicator" id="round-indicator" style="display: none;">
            Round <span id="current-round">1</span> of <span id="total-rounds">2</span>
        </div>

        <!-- Join Screen -->
        <div class="join-screen active">
            <div class="form-group">
                <label for="player-name">Enter Your Name:</label>
                <input type="text" id="player-name" placeholder="Your name" maxlength="30" required>
            </div>
            <button onclick="joinGame()">Join Game</button>
        </div>

        <!-- Waiting Screen -->
        <div class="waiting-screen">
            <div class="info-box">
                <h2>✓ Joined Successfully!</h2>
                <p style="margin-top: 10px; font-size: 1.1rem;">Waiting for admin to start the game...</p>
                <p style="margin-top: 15px; color: #666;">Players joined: <strong id="waiting-player-count">0</strong></p>
            </div>
        </div>

        <!-- Countdown Screen -->
        <div class="countdown-screen">
            <div class="info-box">
                <h2>🚀 Get Ready!</h2>
                <div class="countdown-display" id="countdown-display">10</div>
                <p style="font-size: 1.2rem;">Game starting soon...</p>
            </div>
        </div>

        <!-- Game Screen -->
        <div class="game-screen">
            <div class="player-info">
                <strong>Player:</strong> <span id="player-name-display"></span>
            </div>
            <div class="timer" id="timer">00:00.00</div>
            <div class="puzzle-container" id="puzzle-container"></div>
            <div id="error-container"></div>
        </div>

        <!-- Waiting for Round 2 Screen -->
        <div class="waiting-round2-screen">
            <div class="result-card">
                <div class="completed-badge">✓ ROUND 1 COMPLETED</div>
                <h2>Great Job!</h2>
                <div class="result-stats">
                    <div class="stat">
                        <h3 id="round1-time">00:00.00</h3>
                        <p>Round 1 Time</p>
                    </div>
                    <div class="stat">
                        <h3 id="round1-rank">-</h3>
                        <p>Round 1 Rank</p>
                    </div>
