<body>
    <div class="container">
        <h1>🎮 Tango Puzzle Game - Admin Panel</h1>

        <!-- Create Game Section -->
        <div id="create-section" class="section">
            <h2>Create New Game</h2>
            <div class="info-box">
                <p>Game will start with a 4×4 Tango puzzle</p>
            </div>
            <button onclick="createGame()">Create Game</button>
        </div>

        <!-- Game Control Section -->
        <div id="control-section" class="section hidden">
            <h2>Game Control</h2>
            <div class="success-box">
                <strong>Game Created Successfully!</strong>
                <div class="game-link">
                    <strong>Player Join Link:</strong><br>
                    <a id="join-link" href="#" target="_blank"></a>
                </div>
            </div>

            <div class="stats">
                <div class="stat-card">
                    <h3 id="player-count">0</h3>
                    <p>Players Joined</p>
                </div>
                <div class="stat-card">
                    <h3 id="completed-count">0</h3>
                    <p>Completed</p>
                </div>
                <div class="stat-card">
                    <h3><span class="status-badge" id="game-status">Waiting</span></h3>
                    <p>Game Status</p>
                </div>
            </div>

            <div class="btn-group">
                <button id="start-btn" onclick="startGame()">Start Game</button>
                <button onclick="exportResults()">Export Results (CSV)</button>
                <button onclick="refreshLeaderboard()">Refresh Leaderboard</button>
            </div>
            <div id="round-status" class="info-box" style="display: none; margin-top: 15px;">
                <strong>Game includes 3 rounds:</strong> 4×4, 6×6, and 8×8 Tango puzzles
            </div>
        </div>

        <!-- Leaderboard Section -->
        <div id="leaderboard-section" class="section hidden">
            <h2>Live Leaderboard</h2>
            <table id="leaderboard">
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>Player Name</th>
                        <th>Status</th>
                        <th>Completion Time</th>
                    </tr>
                </thead>
                <tbody id="leaderboard-body">
                    <tr>
                        <td colspan="4" style="text-align: center; color: #999;">No players yet</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();
        let currentGameId = null;

        function createGame() {
            fetch('/api/admin/create-game', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            })
            .then(res => res.json())
            .then(data => {
                currentGameId = data.gameId;
                const joinUrl = `${window.location.origin}${data.joinLink}`;

                document.getElementById('join-link').href = joinUrl;
                document.getElementById('join-link').textContent = joinUrl;

                document.getElementById('create-section').classList.add('hidden');
                document.getElementById('control-section').classList.remove('hidden');
                document.getElementById('leaderboard-section').classList.remove('hidden');

                socket.emit('join-game', { gameId: currentGameId, isAdmin: true });
                startPolling();
            })
            .catch(err => alert('Error creating game: ' + err.message));
        }

        function startGame() {
            if (!currentGameId) return;

            fetch(`/api/admin/start-game/${currentGameId}`, { method: 'POST' })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('start-btn').disabled = true;
                    document.getElementById('round-status').style.display = 'block';
                    alert('Game starting! Countdown initiated.');
                }
            })
            .catch(err => alert('Error starting game: ' + err.message));
        }

        function exportResults() {
            if (!currentGameId) return;
            window.location.href = `/api/admin/export/${currentGameId}`;
        }

        function refreshLeaderboard() {
            if (!currentGameId) return;
            updateLeaderboard();
        }

        function updateLeaderboard() {
            if (!currentGameId) return;

            fetch(`/api/admin/game/${currentGameId}`)
            .then(res => res.json())
            .then(data => {
                document.getElementById('player-count').textContent = data.playerCount;
                document.getElementById('completed-count').textContent =
                    data.players.filter(p => p.status === 'completed').length;

                const statusBadge = document.getElementById('game-status');
                statusBadge.textContent = data.status.charAt(0).toUpperCase() + data.status.slice(1);
                statusBadge.className = 'status-badge status-' + data.status;

                if (data.status !== 'waiting') {
                    document.getElementById('start-btn').disabled = true;
                }

                const tbody = document.getElementById('leaderboard-body');
                if (data.players.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="4" style="text-align: center; color: #999;">No players yet</td></tr>';
                    return;
                }

                tbody.innerHTML = data.players.map(p => {
                    const time = p.completionTime
                        ? formatTime(p.completionTime)
                        : '-';
                    const statusClass = 'status-' + p.status;

                    return `
                        <tr>
                            <td>${p.rank || '-'}</td>
                            <td>${p.name}</td>
                            <td><span class="status-badge ${statusClass}">${p.status}</span></td>
                            <td>${time}</td>
                        </tr>
                    `;
                }).join('');
            });
        }

        function formatTime(ms) {
            const seconds = (ms / 1000).toFixed(2);
            const mins = Math.floor(seconds / 60);
            const secs = (seconds % 60).toFixed(2);
            return `${mins}:${secs.padStart(5, '0')}`;
        }

        function startPolling() {
            updateLeaderboard();
            setInterval(updateLeaderboard, 2000);
        }

        socket.on('player-joined', (data) => {
            updateLeaderboard();
        });

        socket.on('player-completed', (data) => {
            updateLeaderboard();
        });

        socket.on('countdown-start', (data) => {
            alert(`Countdown started! Game will begin in ${data.seconds} seconds.`);
        });
    </script>
</body>
